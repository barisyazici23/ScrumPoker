{
  "name": "scrum-poker",
  "version": "1.0.0",
  "description": "Scrum Poker Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm start\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "vite": "^5.0.0"
  }
} 